<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/isVeg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/veg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/secondry_bold"
                    android:text="Paneer with onion Pizza"
                    android:textSize="16sp" />

                <FrameLayout
                    android:id="@+id/parentItemCount"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/bg_round_corner_5"
                    android:backgroundTint="#FDDAE0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/subBtn"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="start|center"
                        android:src="@drawable/ic_minus"
                        app:tint="@color/primaryLite" />

                    <ImageView
                        android:id="@+id/addBtn"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="end|center"
                        android:src="@drawable/ic_add"
                        app:tint="@color/primaryLite" />

                    <TextView
                        android:id="@+id/itemCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/primary_extra"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/itemCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/secondry_bold"
                    android:text="₹130"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/payableAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/secondry_bold"
                    android:text="₹130"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/editCart"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawableTint="@color/primaryLite"
                android:enabled="false"
                android:text="Edit"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</layout>